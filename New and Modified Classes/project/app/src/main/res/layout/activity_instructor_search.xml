<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the Class Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/searchInst2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtClass"
        app:layout_constraintVertical_bias="0.623"
        tools:layout_editor_absoluteX="174dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtInstructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the Instructor Email"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/searchInst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInstructor"
        app:layout_constraintVertical_bias="0.011"
        tools:layout_editor_absoluteX="161dp" />
</androidx.constraintlayout.widget.ConstraintLayout>